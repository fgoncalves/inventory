<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="android:colorPrimary">@color/primary</item>
    <item name="android:colorPrimaryDark">@color/primary_dark</item>
    <item name="android:colorAccent">@color/accent</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:actionMenuTextColor">@color/white</item>
    <item name="android:statusBarColor">@color/primary_dark</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="ProductListName">
    <item name="android:singleLine">true</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="ToolbarDoneButton" parent="Base.Widget.AppCompat.Button.Borderless">
    <item name="android:textColor">@color/white</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="MainToolbarClickToEdit">
    <item name="android:textSize">22sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="MainTitleText">
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:textSize">20sp</item>
    <item name="android:singleLine">true</item>
    <item name="android:maxLines">1</item>
  </style>

  <style name="InfoText">
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:textSize">13sp</item>
  </style>

  <style name="SecondaryText" parent="InfoText">
    <item name="android:singleLine">true</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="EmptyTextStyle">
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:textSize">24sp</item>
  </style>

  <style name="FabButton">
    <item name="fab_size">mini</item>
    <item name="fab_colorNormal">@color/primary_light</item>
    <item name="fab_colorPressed">@color/primary</item>
    <item name="fab_colorRipple">@color/pale_grey</item>
  </style>

  <style name="LoginTitle">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">46sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="DrawerVersionName">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/primary_text</item>
  </style>

  <style name="DrawerVersionNameLabel">
    <item name="android:textColor">@color/secondary_text</item>
  </style>

  <style name="Card">
    <item name="android:background">@color/white</item>
    <item name="android:elevation">8dp</item>
    <item name="android:layout_margin">8dp</item>
  </style>

  <style name="CardTitle">
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_margin">16dp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="CardTitle.Dark" parent="CardTitle">
    <item name="android:textColor">@color/primary_text</item>
  </style>

  <style name="CardSubTitle">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:textStyle">bold</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingTop">12dp</item>
  </style>

  <style name="CardSubTitle.Dark" parent="CardSubTitle">
    <item name="android:textColor">@color/primary_text</item>
  </style>


  <style name="CardSubTitle.Light" parent="CardSubTitle">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="CardDescription">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:padding">16dp</item>
    <item name="android:maxLines">2</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="CardButton" parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:padding">8dp</item>
  </style>
</resources>
