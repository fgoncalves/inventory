<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="android:colorPrimary">@color/primary</item>
    <item name="android:colorPrimaryDark">@color/primary_dark</item>
    <item name="android:colorAccent">@color/accent</item>
    <item name="android:actionMenuTextColor">@color/white</item>
    <item name="android:statusBarColor">@color/primary_dark</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="ProductListName">
    <item name="android:singleLine">true</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="ToolbarDoneButton" parent="Base.Widget.AppCompat.Button.Borderless">
    <item name="android:textColor">@color/white</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="MainToolbarClickToEdit">
    <item name="android:textSize">22sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center_vertical</item>
  </style>

  <style name="MainTitleText">
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:textSize">20sp</item>
    <item name="android:singleLine">true</item>
    <item name="android:maxLines">1</item>
  </style>

  <style name="InfoText">
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:textSize">13sp</item>
  </style>

  <style name="SecondaryText" parent="InfoText">
    <item name="android:singleLine">true</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="EmptyTextStyle">
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:textSize">24sp</item>
  </style>

  <style name="FabButton">
    <item name="fab_size">mini</item>
    <item name="fab_colorNormal">@color/primary_light</item>
    <item name="fab_colorPressed">@color/primary</item>
    <item name="fab_colorRipple">@color/pale_grey</item>
  </style>
</resources>
