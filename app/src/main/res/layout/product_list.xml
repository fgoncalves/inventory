<?xml version="1.0" encoding="utf-8"?>
<com.fred.inventory.presentation.productlist.views.ProductListViewImpl
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listOfProducts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:theme="@style/AppTheme"
    tools:context="com.fred.inventory.MainActivity"
    >

  <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/colorPrimary"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        >
      <com.fred.inventory.presentation.widgets.clicktoedittext.ClickToEditTextViewImpl
          style="@style/MainToolbarClickToEdit"
          android:id="@+id/product_list_name"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="0.75"
          />

      <Button
          android:id="@+id/toolbar_done_button"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="0.25"
          android:text="@string/done"
          style="@style/ToolbarDoneButton"
          />
    </LinearLayout>
  </android.support.v7.widget.Toolbar>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/toolbar"
      >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/product_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/empty_product_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:text="@string/empty_view"
        android:visibility="gone"
        />
  </RelativeLayout>

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/add_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_margin="@dimen/fab_margin"
      android:src="@android:drawable/ic_dialog_email"
      app:layout_anchor="@id/app_bar"
      />

</com.fred.inventory.presentation.productlist.views.ProductListViewImpl>
