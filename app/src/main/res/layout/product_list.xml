<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="viewModel"
        type="com.fred.inventory.presentation.productlist.viewmodels.ProductListViewModel"
        />
  </data>

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/primary_light"
      >

    <android.support.v7.widget.Toolbar
        android:id="@+id/product_list_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
      <com.fred.inventory.presentation.widgets.clicktoedittext.ClickToEditTextViewImpl
          android:id="@+id/product_list_name"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@{viewModel.productListName()}"
          app:addTextChangedListener="@{viewModel.productNameTextWatcher()}"
          style="@style/MainToolbarClickToEdit"
          />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/product_list_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="@{viewModel.itemListVisibility()}"
        app:adapter="@{viewModel.productListRecyclerViewAdapter()}"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_list_toolbar"
        tools:listitem="@layout/product_list_item"
        tools:visibility="visible"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="@{viewModel.progressBarVisibility()}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_list_toolbar"
        tools:visibility="gone"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/empty_product_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="@{viewModel.emptyListVisibility()}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_list_toolbar"
        tools:visibility="visible"
        >

      <ImageView
          android:id="@+id/empty_image"
          android:layout_width="200dp"
          android:layout_height="200dp"
          android:layout_marginTop="8dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.491"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/empty_text"
          app:layout_constraintVertical_bias="0.48000002"
          app:srcCompat="@drawable/box"
          />

      <TextView
          android:id="@+id/empty_text"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginStart="16dp"
          android:gravity="center_horizontal"
          android:text="@string/empty_list"
          app:layout_constraintBottom_toTopOf="@+id/empty_image"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          style="@style/EmptyTextStyle"
          />
    </android.support.constraint.ConstraintLayout>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/add_button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/plus"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu_colorNormal="@color/accent"
        app:menu_colorPressed="@color/accent_dark"
        app:menu_colorRipple="@color/accent_ripple"
        >
      <com.github.clans.fab.FloatingActionButton
          android:id="@+id/add_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:clickable="true"
          android:onClick="@{viewModel::onAddButtonClick}"
          app:fab_label="@string/manually"
          style="@style/FabButton"
          />

      <com.github.clans.fab.FloatingActionButton
          android:id="@+id/bar_code_scanner_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:onClick="@{viewModel::onScanBarCodeButtonClick}"
          app:fab_label="@string/scan_code"
          style="@style/FabButton"
          />
    </com.github.clans.fab.FloatingActionMenu>

  </android.support.constraint.ConstraintLayout>
</layout>
