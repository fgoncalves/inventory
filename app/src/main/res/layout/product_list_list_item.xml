<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="viewModel"
        type="com.fred.inventory.presentation.listofproducts.viewmodels.ListOfProductListsItemViewModel"
        />
  </data>
  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/list_of_product_lists_margin"
      android:background="@color/white"
      >

    <ImageView
        android:id="@+id/list_of_product_lists_image"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_groceries"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/list_of_product_lists_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_of_product_lists_image"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@{viewModel.itemNameObservable()}"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_of_product_lists_image"
        tools:text="Groceries"
        style="@style/MainTitleText"
        />

    <TextView
        android:id="@+id/list_of_product_lists_info_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_of_product_lists_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center_horizontal"
        android:text="@{viewModel.infoTextObservable()}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_of_product_lists_title"
        tools:text="10 items"
        style="@style/InfoText"
        />

    <ImageView
        android:id="@+id/list_of_product_list_item_bin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:onClick="@{viewModel.deleteButtonClickListener()}"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bin"
        />

  </android.support.constraint.ConstraintLayout>
</layout>
