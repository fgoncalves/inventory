<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data>
    <variable
        name="viewModel"
        type="com.fred.inventory.presentation.items.viewmodels.ItemViewModel"
        />
  </data>

  <ViewSwitcher
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:inAnimation="@android:anim/slide_in_left"
      android:outAnimation="@android:anim/slide_out_right"
      app:displayedChild="@{viewModel.viewSwitcherDisplayedChildObservable()}"
      app:onTouchListener="@{viewModel.viewSwitcherOnTouchListener()}"
      >
    <include
        layout="@layout/uncertain_quantity"
        app:viewModel="@{viewModel}"
        />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:value="@{viewModel.knownQuantityObservable()}"
        />
  </ViewSwitcher>
</layout>